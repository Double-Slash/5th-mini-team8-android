<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:contentPadding="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ingredient_item_name"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textColor="#dd000000"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/notosanskr_regular"
        android:paddingStart="12dp"
        android:paddingLeft="12dp"
        android:lineSpacingExtra="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
         />

    <Button
        android:id="@+id/item_add_btn"
        android:layout_height="28dp"
        android:layout_width="52dp"
        app:layout_constraintRight_toRightOf="@+id/ingredient_item_name"
        app:layout_constraintTop_toTopOf="@+id/ingredient_item_name"
        app:layout_constraintBottom_toBottomOf="@+id/ingredient_item_name"
        android:background="@drawable/add_ingredient_item_btn"
        android:text="담기"
        android:layout_marginRight="8dp"
        android:textSize="12sp"
        android:fontFamily="@font/notosanskr_regular"
        android:includeFontPadding="false">
    </Button>



</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".refrigerator.AddIngredientActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="10dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:layout_alignParentTop="true"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Search_bar"
        app:layout_constraintTop_toBottomOf="@+id/app_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/search_editText"
            android:background="@drawable/rounded_edittext"
            android:layout_height="60dp"
            android:layout_width="300dp"
            android:autofillHints="재료 검색"/>
        <Button
            android:layout_height="30dp"
            android:layout_width="30dp"
            app:layout_constraintRight_toRightOf="@+id/search_editText"
            app:layout_constraintTop_toTopOf="@+id/search_editText"
            app:layout_constraintBottom_toBottomOf="@+id/search_editText"
            android:layout_marginRight="14dp"
            android:background="@drawable/searchbt"
            android:layout_marginEnd="10dp">
        </Button>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="120dp"
        android:paddingBottom="120dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom"
        app:layout_constraintTop_toBottomOf="@+id/Search_bar"
        app:layout_constraintVertical_bias="0.537"
        tools:layout_editor_absoluteX="1dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/addIngredientView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="30dp"
            tools:listitem="@layout/ref_ingredient_item">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/slidebtn"
            android:layout_width="50dp"
            app:layout_constraintRight_toLeftOf="@+id/ingredient_addBt"
            android:layout_marginRight="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="20dp"
            android:background="@drawable/ref_bt"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp">
        </Button>
        <Button
            android:id="@+id/ingredient_addBt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_redbt"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp">
        </Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#ddfefefe"
            android:lineSpacingExtra="25sp"
            android:gravity="center_horizontal"
            android:elevation="2dp"
            tools:text="담은 재료 추가하기"
            app:layout_constraintRight_toRightOf="@+id/ingredient_addBt"
            app:layout_constraintBottom_toBottomOf="@+id/ingredient_addBt"
            app:layout_constraintTop_toTopOf="@+id/ingredient_addBt"
            app:layout_constraintLeft_toLeftOf="@+id/ingredient_addBt"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>